{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "rules": {
        "no-use-before-define": [0],
        "max-len": ["error", {"code": 120, "tabWidth": 2, "ignoreUrls": true}],
        "react/prefer-stateless-function": [1],
        "react/prop-types": [1],
        "no-else-return": [0]
    }
}
